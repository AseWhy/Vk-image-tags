{
  "manifest_version": 2,
  "name": "Vk image tags",
  "description": "Добавляейте теги для быстрого поиска по картинкам в вк!",
  "version": "0.0.1",
  "icons": {
    "64": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
        "matches": [ "*://*.vk.com/*" ],
        "js": [ "background/index.js" ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}